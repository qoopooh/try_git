{
  "name": "Domotics FTC Socket",
  "short_name": "FTC Socket",
  "version": "0.6",
  "manifest_version": 2,
  "minimum_chrome_version": "24",
  "description": "This application is used for debugging FTC bus over IP",

  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },

  "icons": {
    "16": "assets/icon-16.png",
    "128": "assets/logo-domotics-icon.png"
  },

  "permissions": [
    {
      "socket": [
        "tcp-connect:*:*"
      ]
    },
    "storage"
  ]
}

