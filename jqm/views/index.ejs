<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1"/> 
    <link rel='stylesheet' href='js/jquery.mobile-1.3.0.min.css' />
    <script src="js/jquery-1.9.1.min.js"></script>
    <script src="js/jquery.mobile-1.3.0.min.js"></script>
  </head>
  <body>
  <!-- begin first page -->
  <section id="page1" data-role="page">
    <header data-role="header">
      <h1><%= title %></h1>
    </header>
    <div data-role="content" class="content">
      <p>Welcome to <%= title %></p>
      <p class="show-menu">Show/Hide Menu</p>
      <div class="sliding-menu slide out">Menu...</div>
      <p><a href="#page2"
          data-rel="dialog"
          data-transition="slidedown">Go to Settings page</a></p>
      <p><a href="#page3" data-transition="flip">Flip to Page 3</a></p>
    </div>
    <footer data-role="footer">
      <h2 id="first_footer">Because the world needed another Twitter app.</h2>
    </footer>
  </section>
  <!-- end first page -->

  <!-- begin second page -->
  <section id="page2" data-role="page">
    <header data-role="header">
      <h1>jqmTwit: Settings</h1>
    </header>
    <div data-role="content" class="content">
      <p>Settings go here.</p>
    </div>
    <footer data-role="footer">
      <h2 id="second_footer">Because the world needed another</h2>
    </footer>
  </section>
  <!-- end second page -->

  <!-- begin third page -->
  <section id="page3" data-role="page" data-add-back-btn="true">
    <header data-role="header">
      <h1>jQuery Mobile</h1>
    </header>
    <div data-role="content" class="content">
      <p id="data_page3">data</p>
      <p><a href="#page1" data-transition="flip" data-direction="reverse"
          >Flip back to Page 1</a></p>
      <h3>Unordered List</h3>
      <ul data-role="listview">
        <li><a href="#">Item</a></li>
        <li><a href="#">Item</a></li>
        <li data-role="divider">Group A</li>
        <li><a href="#">Item</a></li>
      </ul>
      <h3>Ordered List</h3>
      <ol data-role="listview">
        <li><a href="#">Item</a></li>
        <li><a href="#">Item</a></li>
        <li data-role="divider">Group B</li>
        <li><a href="#">Item</a></li>
      </ol>
      <h3>Nested List</h3>
      <ul data-role="listview">
        <li>Restaurants
          <ul>
            <li>French
              <ul>
                <li>Le Central</li>
                <li>Bistro Vandome</li>
                <li>Antonie's</li>
              </ul>
            </li>
            <li>Cajun and Creole
              <ul>
                <li>Central</li>
                <li>Vandome</li>
                <li>Lucile's</li>
              </ul>
            </li>
            <li>American
              <ul>
                <li>Dixon's</li>
                <li>Vesta Dipping Grill</li>
                <li>Steuben's</li>
              </ul>
            </li>
          </ul>
        </li>
      </ul>

    </div>
    <footer data-role="footer">
      <h2>Because the world needed another</h2>
    </footer>
  </section>
  <!-- end third page -->
#

  <script src="javascripts/jqm.js"></script>
  </body>
</html>
